<div class="container">
  <div class="card-columns">
    {{#each recipes}}
    <div class="col card">
      <img src="{{ recipe.image }}" class="card-img-top" alt="">
      <div class="card-body">
        <h5 class="card-title">{{ recipe.label }}</h5>
        <p class="card-text">{{ recipe.source }}</p>
        <a href="{{ recipe.url }}" class="btn btn-primary">View Recipe</a>

        <button class="recipe-bookmark" data-recipe-uri="{{ getID recipe.uri }}"
          data-recipe-data="{{getData recipe}}">Save</button>

        {{!-- <form action="/recipes/{{ getID recipe.uri }}/save" method="POST">
          <input class="hidden" type="text" name="data" value="{{getData recipe}}" />
          <button>Save</button>
        </form> --}}

      </div>
    </div>
    {{/each}}
  </div>
</div>

<script>
  document.addEventListener('click', e => {
    const instance = axios.create({
      baseURL: 'http://localhost:8080'
    });
    if (e.target.classList.contains('recipe-bookmark')) {
      const uri = e.target.dataset.recipeUri;
      const data = e.target.dataset.recipeData;

      axios.post(`/recipes/${uri}/save`, {data: data}).then(res => {
        console.log(res.data);
      })
    
    }
  });
</script>


