<div class="container-fluid d-flex justify-content-center">
    <form class="mx-auto mt-5" action="/user/{{user._id}}/profile-is-complete" enctype="multipart/form-data">
        <div class="form-group">
            <label>Display Name</label>
            <input type="text" class="form-control" name="displayName" id="complete-display-name" required>
        </div>

        <div class="form-group">
            <label>Profile Photo</label>
            <div class="input-group mb-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" name="uploaded-file" id="uploaded-file">
                    <label class="custom-file-label" id="uploaded-file-label">Choose Image</label>
                </div>
            </div>
            <img src="" id="uploaded-file-preview" width="300">
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>


<script>
    const $picUploadInput = document.getElementById("uploaded-file");
    const $picUploadLabel = document.getElementById("uploaded-file-label")
    const $picUploadPreview = document.getElementById("uploaded-file-preview");

    $picUploadInput.addEventListener("change", e => {
        const fileName = e.target.files[0].name;
        $picUploadLabel.innerText = fileName;
        const reader = new FileReader();
        
        reader.onload = j =>  {
            $picUploadPreview.setAttribute("src", j.target.result);
        }
        reader.readAsDataURL(e.target.files[0]);
    });
</script>