{{!-- Add User Profile View --}}

<div class="container-fluid mt-4">
    <div class="ml-5">
        <div class="row">
            <div class="col d-flex align-items-center">
                <h1 class="display-3">My Profile</h1>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col">
                <h3 class="text-warning border-bottom border-warning">Saved Recipes</h3>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <div class="card-columns">
                    {{#each savedRecipes}}
                        <div class="card">
                            <img src="{{this.data.image}}" class="card-img-top" alt="Recipe Image" style="max-height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">{{this.data.label}}</h5>
                                <form action="/recipes/{{ getID this.data.uri }}" method="GET" class="d-inline">
                                    <button class="btn btn-primary">View Recipe</button>
                                </form>
                                <div class="d-flex justify-content-between align-items-center mx-3 mt-1">
                                    <div class="row">
                                        <form action="/user/unsave-recipe/{{ getID this.data.uri }}" method="POST">
                                            <button class="btn btn-warning btn-sm">
                                                <i class="fas fa-bookmark mr-2"></i>
                                                Saved
                                            </button>
                                        </form>
                                    </div>
                                    <div class="row d-flex align-items-center">
                                        <h5 class="m-0 mr-1">{{this.count}}</h5>
                                        <i class="fas fa-bookmark mr-2 text-danger"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
