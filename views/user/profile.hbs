{{!-- Add User Profile View --}}

<div class="container-fluid mt-4 mx-5">
    <div class="row">
        <div class="col d-flex align-items-center">
            {{!-- <img src="{{user.photoUrl}}" alt="" style="max-width: 100px;" class="rounded-circle"> --}}
            <h1 class="display-3">My Profile</h1>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col">
            <h3 class="text-warning border-bottom border-warning">Saved Recipes</h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card-columns">
                {{#each savedRecipes}}
                    <div class="card">
                        <img src="{{this.data.image}}" class="card-img-top" alt="Recipe Image" style="max-height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.data.label}}</h5>
                            <div class="d-flex justify-content-md-between align-items-center">
                                <div class="row">
                                    <a href="#" class="btn btn-warning">
                                        <i class="fas fa-bookmark mr-2"></i>
                                        Saved
                                    </a>
                                </div>
                                <div class="row d-flex align-items-center">
                                    <h5 class="m-0 mr-1">{{this.count}}</h5>
                                    <i class="fas fa-bookmark mr-2 text-danger"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>