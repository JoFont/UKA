<title>Ulitmate Kitchen Assistant</title>

<div id="index" class="container-fluid">
  {{!-- <h1>Ulitmate Kitchen Assistant</h1> --}}
  <img src="/images/brand-vertical-white.png" alt="UKA" style="max-width: 15%" class="pb-3">
  <form class="search auth-form" action="/recipes" method="GET">
    <input type="text" name="include" placeholder="Enter your ingredients..." />

    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" id="customCheck1" name="strict" />
      <label class="custom-control-label" for="customCheck1">Only these ingredients</label>
    </div>

    <input type="text" id="exclude" name="exclude" placeholder="Excluded ingredients..." />

    <button class="btn btn-dark">Search</button>
  </form>
</div>

<script>
  document.getElementById("customCheck1").addEventListener("click", hideExcludes);

  function hideExcludes() {
    const $exclude = document.getElementById("exclude");
    if ($exclude.style.visibility === "hidden") {
      $exclude.style.visibility = "visible"
    } else {
      $exclude.style.visibility = "hidden"
    }
  }
</script>